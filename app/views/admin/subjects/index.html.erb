<div class="small-12 column">
  <div class="full-with">
    <div class="small-8 column">
      <h1>Asignaturas</h1>
    </div>
    <div class="small-4 column">
      <button type="button" name="button" id="import-subject" class="button">Importar</button>
      <%= link_to 'Crear Asignatura', new_admin_subject_path, class: 'button' %>
    </div>
    <div class="row scopes">
      <div class="small-12 column">
        <%= scope :all, "Todos" %>
        <%#= render partial: "admin/survey_comments/search_form", layout: "layouts/search_form" %>
      </div>
    </div>
  </div>

  <table class="table" border="0" cellpadding="0" cellspacing="0">
    <thead>
      <tr>
        <th><%= sort_link(@q, :codigo, 'Código') %></th>
        <th><%= sort_link(@q, :nombre, 'Nombre') %></th>
        <th class="action_column"></th>
      </tr>
    </thead>

    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.codigo %></td>
          <td><%= subject.nombre %></td>
          <td class="action_column">
            <div class="action_links">
              <%= link_to "", admin_subject_path(subject), class: "fa fa-search view_link" %>
              <%= link_to "", edit_admin_subject_path(subject), class: "fa fa-pencil edit_link" %>
              <%= link_to "", admin_subject_path(subject), class: "fa fa-trash delete_link", confirm: "¿Está seguro de que quiere eliminar esto?", method: :delete %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="small-12 column">
      <%= paginate @subjects %>
      <%= page_entries_info  @subjects %>
    </div>
  </div>
</div>
