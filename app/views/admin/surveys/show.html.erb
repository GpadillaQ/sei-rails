<div class="small-6 column">
  <p>
    <strong>Nombre:</strong>
    <%= @survey.nombre %>
  </p>

  <p>
    <strong>Inicio:</strong>
    <%= @survey.inicio %>
  </p>

  <p>
    <strong>Fin:</strong>
    <%= @survey.fin %>
  </p>

  <%= link_to 'Editar', edit_admin_survey_path(@survey), class: 'button' %>
  <%= link_to 'Atras', admin_surveys_path, class: 'button' %>
  <button type="button" name="button" id="import-survey" data-survey-id="<%= @survey.id %>" class="button">Importar</button>
  <%= link_to 'Activar', admin_survey_active_path(@survey), class: 'button' %>
</div>

<div class="small-12 columns">
  <table class="table" border="0" cellpadding="0" cellspacing="0">
    <thead>
      <tr>
        <th>Usuario</th>
        <th>Tipo de Usuario</th>
        <th>Nivel</th>
        <th>Grupo</th>
        <th>Intervalo</th>
        <th>Asignatura</th>
      </tr>
    </thead>
    <tbody>
      <% @survey.user_surveys.each do |us| %>
        <tr>
          <td><%= us.user.display_name %></td>
          <td><%= us.user_type.display_name %></td>
          <td><%= us.level.display_name %></td>
          <td><%= us.group.display_name %></td>
          <td><%= us.interval.display_name %></td>
          <td><%= us.subject.display_name %></td>
        </tr>
      <% end %>
    </tbody>
</div>
