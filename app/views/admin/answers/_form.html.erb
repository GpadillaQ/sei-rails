<%= form_for([:admin, answer]) do |f| %>
  <% if answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
      <% answer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Tipo de Usuario' %>
    <%= f.select :user_type_id, UserType.all.collect { |q| [ q.display_name, q.id ] } %>
  </div>

  <div class="field">
    <%= f.label :descripcion %>
    <%= f.text_area :descripcion %>
  </div>

  <div class="field">
    <%= f.label 'Tipo de Respuesta' %>
    <%= f.select :answer_type_id, AnswerType.all.collect { |r| [ r.display_name, r.id ] } %>
  </div>

  <div class="actions">
    <%= f.submit 'Guardar', class: 'button' %>
  </div>
<% end %>
